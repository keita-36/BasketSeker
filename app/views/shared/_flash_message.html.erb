<% flash.each do |message_type, message| %>
    <div id="added-message" class="px-4 py-2 rounded-md <%= message_type == 'success' ? 'bg-green-100 border-green-200 text-green-700' : message_type == 'notice' ? 'bg-blue-100 border-blue-200 text-blue-700' : 'bg-red-100 border-red-200 text-red-700' %>">
        <%= message %>
    </div>
<% end %>