<%= form_with model: [@event, @match_result], local: true do |f| %>
<div class="tw-form">

    <% @users.each do |user| %>
        <% if !MatchResult.result_exists?(@current_user, user, @event) %>
            <%= f.label "対 #{user.name}" %>
            <%= f.radio_button "results[#{user.id}]", 'WIN' %> WIN
            <%= f.radio_button "results[#{user.id}]", 'LOSE' %> LOSE
        <% end %>
        <br>
    <% end %>

    <% unless @result_saved %>
        <%= f.submit "結果を送信", class: 'btn btn-primary' %>
    <% else %>
        <%= link_to 'イベントへ戻る', event_path(@event), class: 'btn btn-primary' %>
    <% end %>
</div>
<% end %>